{
  "name": "raydium-arbitrage-bot",
  "version": "1.0.0",
  "description": "Raydium DEX arbitrage bot with liquidity monitoring",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node main.ts",
    "dev": "ts-node-dev --respawn --transpile-only ts-src/index.ts",
    "api": "ts-node ts-src/index.ts",
    "test": "ts-node ts-src/tests/test-endpoints.ts",
    "test:jito": "ts-node ts-src/tests/test-jito.ts",
    "jito:example": "ts-node ts-src/examples/jito-bundle-example.ts",
    "test:jito-bundle": "ts-node ts-src/tests/test-jito-bundle.ts",
    "test:pool-analysis": "ts-node ts-src/tests/test-pool-analysis.ts",
    "test:liquidity-analyzer": "ts-node ts-src/tests/test-liquidity-analyzer.ts",
    "test:metrics-dashboard": "ts-node ts-src/tests/test-metrics-dashboard.ts",
    "test:trade-recommendations": "ts-node ts-src/tests/test-trade-recommendations.ts",
    "monitor": "ts-node monitor-liquidity.ts",
    "monitor:enhanced": "ts-node monitor-liquidity-enhanced.ts",
    "lint": "eslint . --ext .ts",
    "test:flash-loan": "mocha -r ts-node/register ts-src/tests/test-flash-loan.ts",
    "test:all": "mocha -r ts-node/register ts-src/tests/**/*.ts",
    "example:enhanced-flashloan": "ts-node ts-src/examples/enhanced-flash-loan-arbitrage-example.ts",
    "test:raydium-flash-loan": "ts-node ts-src/test-raydium-flash-loan.ts"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.13",
    "@grpc/proto-loader": "^0.7.10",
    "@raydium-io/raydium-sdk": "^1.3.1-beta.58",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "@solendprotocol/solend-sdk": "^0.6.16",
    "axios": "^1.6.2",
    "bn.js": "^5.2.1",
    "chai": "^4.3.10",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jito-ts": "^4.2.0",
    "mocha": "^10.2.0",
    "protobufjs": "^7.2.5",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "chai-as-promised": "^7.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
